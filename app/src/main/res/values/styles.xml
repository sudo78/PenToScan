<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/splash</item>
        <item name="android:textColorHint">@color/colorText</item>
        <item name="colorControlNormal">@color/colorText</item>
        <item name="colorControlActivated">@color/colorText</item>
        <item name="android:textColorHighlight">@color/blue_200</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>

        <!--<item name="android:colorPrimary">@color/blue_500</item>-->
        <!--<item name="android:colorPrimaryDark">@color/blue_700</item>-->
